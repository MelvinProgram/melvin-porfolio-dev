---
  import '@fontsource-variable/onest';
  import '../styles/global.css'
  import Header from '../components/Header.astro'
//   import "../scripts/scrollFade.js";

  interface Props {
	title: string;
  }// Define the props interface
  const { title } = Astro.props; // Destructure the title prop
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title> <!-- Use the title prop here -->
	</head>
	<body class="size-full bg-animated-gradient min-h-screen relative">
		<!-- <div class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div> -->
		<Header />
		<slot />
	</body>
	<script src="../scripts/activeNav.js"></script>
	<script src="/src/scripts/scrollFade.js"></script>

</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: 'Onest Variable', sans-serif;
		scroll-behavior: smooth;
	}

	body {
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: #050505;
	}
</style>
